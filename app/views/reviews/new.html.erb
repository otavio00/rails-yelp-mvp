<div class="container mt-4">
  <h1>New Review for <%= @restaurant.name %></h1>

  <%= simple_form_for([@restaurant, @review]) do |f| %>
    <%= f.input :content %>
    <%= f.input :rating, collection: (0..5).to_a, include_blank: "Select a rating" %>
    <%= f.submit "Add Review", class: "btn btn-primary" %>
  <% end %>

  <%= link_to "Back to restaurant", restaurant_path(@restaurant), class: "btn btn-secondary mt-3" %>
</div>
