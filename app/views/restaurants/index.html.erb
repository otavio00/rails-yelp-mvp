<div class="container mt-4">
  <h1>All Restaurants</h1>

  <%= link_to "Add New Restaurant", new_restaurant_path, class: "btn btn-success mb-3" %>

  <% if @restaurants.any? %>
    <ul class="list-group">
      <% @restaurants.each do |restaurant| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <%= restaurant.name %> - <%= restaurant.category.capitalize %>
          <%= link_to "See details", restaurant_path(restaurant), class: "btn btn-primary btn-sm" %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p>No restaurants yet. Add one!</p>
  <% end %>
</div>
